#!/bin/bash
clear
source ~/.rvm/scripts/rvm
echo Wijn local network launcher thang
echo
echo "DB tasks: drop,create,migrate,seed..."
bin/rake db:drop
bin/rake db:create
bin/rake db:migrate
bin/rake db:seed
echo
echo "starting rails, network accessible at http://[server_ip_addr]:3000"
rails server -b 0.0.0.0
